# Discord Bot Token
DISCORD_TOKEN=your_bot_token_here

# Bot Configuration
COMMAND_PREFIX=!
CHANNELS_CONFIG_FILE=channels_config.json
MAX_FILE_SIZE=8388608
MAX_MESSAGE_LENGTH=2000

# Embed Colors (hex format)
EMBED_COLOR_DEFAULT=0x393a41
EMBED_COLOR_SUCCESS=0x393a41
EMBED_COLOR_INFO=0x393a41
EMBED_COLOR_WARNING=0x393a41
EMBED_COLOR_ERROR=0x393a41
EMBED_COLOR_MESSAGE=0x393a41

# Logging
LOG_LEVEL=INFO
LOG_FILE=bot.log
LOG_MESSAGES=false

# Auto Features
AUTO_CLEANUP_CHANNELS=true
AUTO_ROLE_ENABLED=false
AUTO_ROLE_ID=1388951105521586307
AUTO_ROLE_GUILD_ID=1387900625324478506

# Antispam System
ANTISPAM_ENABLED=true
ANTISPAM_MAX_MESSAGES=5
ANTISPAM_TIME_WINDOW=10
ANTISPAM_MUTE_DURATION=60

# Raid Protection
RAID_PROTECTION_ENABLED=true
RAID_PROTECTION_BLOCK_MASS_MENTIONS=true
RAID_PROTECTION_BLOCK_DISCORD_INVITES=true

# Connection Notifications
CONNECTION_NOTIFICATIONS_ENABLED=true
CONNECTION_NOTIFICATIONS_CHANNEL_ID=1388981755263844576
CONNECTION_NOTIFICATIONS_GUILD_ID=1387900625324478506

# Blacklist System
BLACKLIST_ENABLED=true
BLACKLIST_MODERATOR_ROLE_ID=1388985886099902504
BLACKLIST_BAN_CHANNEL_ID=1388985623268032645
BLACKLIST_UNBAN_CHANNEL_ID=1388985666821423134
BLACKLIST_FILE=blacklist.json

# Leveling System
LEVELS_ENABLED=true
LEVELS_FILE=levels.json
LEVELS_XP_MIN=5
LEVELS_XP_MAX=15
LEVELS_COOLDOWN_SECONDS=60
LEVELS_DAILY_BONUS=20
LEVELS_FIRST_MESSAGE_BONUS=10